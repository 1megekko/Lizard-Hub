local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:FindFirstChildOfClass("Humanoid")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Lizard Hub"
screenGui.Parent = game.CoreGui
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 160)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BorderSizePixel = 2
frame.Draggable = true
frame.Active = true
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "Lizard Hub"
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.Parent = frame

local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(1, -10, 0, 40)
textBox.Position = UDim2.new(0, 5, 0, 40)
textBox.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
textBox.TextColor3 = Color3.new(1, 1, 1)
textBox.PlaceholderText = "Enter Speed"
textBox.Font = Enum.Font.SourceSans
textBox.TextSize = 18
textBox.Parent = frame

local changeSpeedButton = Instance.new("TextButton")
changeSpeedButton.Size = UDim2.new(1, -10, 0, 30)
changeSpeedButton.Position = UDim2.new(0, 5, 0, 90)
changeSpeedButton.Text = "Change Speed"
changeSpeedButton.TextColor3 = Color3.new(0, 0, 0)
changeSpeedButton.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
changeSpeedButton.Font = Enum.Font.SourceSans
changeSpeedButton.TextSize = 16
changeSpeedButton.Parent = frame

local invalidLabel = Instance.new("TextLabel")
invalidLabel.Size = UDim2.new(0, 200, 0, 30)
invalidLabel.Position = UDim2.new(1, -210, 1, -40)
invalidLabel.Text = "Invalid Number! Max (4-90)"
invalidLabel.TextColor3 = Color3.new(1, 0, 0)
invalidLabel.BackgroundTransparency = 1
invalidLabel.Visible = false
invalidLabel.Font = Enum.Font.SourceSansBold
invalidLabel.TextSize = 18
invalidLabel.Parent = screenGui

local scripterLabel = Instance.new("TextLabel")
scripterLabel.Size = UDim2.new(1, 0, 0, 30)
scripterLabel.Position = UDim2.new(0, 5, 0, 120)
scripterLabel.Text = "Scripter: Gekko"
scripterLabel.TextColor3 = Color3.new(1, 1, 1)
scripterLabel.BackgroundTransparency = 1
scripterLabel.Font = Enum.Font.SourceSans
scripterLabel.TextSize = 16
scripterLabel.Parent = frame

changeSpeedButton.MouseButton1Click:Connect(function()
    local speed = tonumber(textBox.Text)
    if speed and speed >= 4 and speed <= 90 then
        humanoid.WalkSpeed = speed
        invalidLabel.Visible = false
    else
        invalidLabel.Visible = true
        wait(2)
        invalidLabel.Visible = false
        textBox.Text = ""
    end
end)
